{
  "name": "fluentflow",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development --config config/vite.config.ts",
    "build": "tsc --project config/tsconfig.json && vite build --mode production --config config/vite.config.ts",
    "build:analyze": "npm run build && npx vite-bundle-analyzer",
    "preview": "vite preview --config config/vite.config.ts",
    "preview:github": "node scripts/development/simulate-github-pages.js",
    "test": "vitest run --config config/vitest.config.ts --reporter=verbose --silent",
    "test:watch": "vitest --config config/vitest.config.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 20 --config config/eslint.config.js",
    "lint:fix": "eslint . --ext ts,tsx --fix --config config/eslint.config.js",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit --project config/tsconfig.json",
    "validate:bem": "node scripts/validation/validate-bem.js",
    "validate:tokens": "node scripts/validation/validate-design-tokens.js",
    "validate:data": "node scripts/validation/validate-data-paths.js",
    "validate:types": "node scripts/validation/fix-module-types.js",
    "validate:all": "node scripts/validation/validate-all.js",
    "security:audit": "npm audit --audit-level=high --omit=dev",
    "security:scan": "node scripts/build/security-patterns.js",
    "pipeline": "node scripts/development/dev-tools.js interactive",
    "pipeline:quality": "node scripts/development/dev-tools.js quality",
    "pipeline:security": "node scripts/development/dev-tools.js security",
    "pipeline:build": "node scripts/development/dev-tools.js build",
    "pipeline:all": "node scripts/development/dev-tools.js all",
    "commit": "node scripts/git/smart-commit.js",
    "commit:auto": "node scripts/git/smart-commit.js --auto",
    "commit:push": "node scripts/git/smart-commit.js --stage-all --push",
    "gh:status": "node scripts/git/github-actions-status.js status",
    "gh:current": "node scripts/git/github-actions-status.js current",
    "gh:watch": "node scripts/git/github-actions-status.js watch",
    "gh:logs": "node scripts/git/github-actions-status.js logs",
    "deploy:status": "node scripts/git/validate-pages-deployment.js",
    "deploy:ping": "curl -s -o /dev/null -w 'HTTP Status: %{http_code}\\nResponse Time: %{time_total}s\\nURL: %{url_effective}\\n' https://gsphome.github.io/englishgame6/",
    "build:full": "node scripts/development/dev-tools.js full",
    "deploy:push": "npm run build && git add . && npm run commit:auto && git push"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@tanstack/react-query": "^5.62.7",
    "fuse.js": "^7.0.0",
    "i18next": "^25.4.1",
    "lucide-react": "^0.544.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.0",
    "react-i18next": "^15.1.2",
    "recharts": "^2.15.4",
    "zod": "^3.24.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "express": "^5.1.0",
    "globals": "^16.3.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.7.2",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  }
}
